{%- if chatbot %}
    <button id="chat-button">ðŸ’¬</button>

    <div id="chat-window">
        <div id="chat-header">
            <div class="row justify-content-between">
                <div class="col">
                    <h5 class="title">Chat</h5>
                </div>
                <div class="col-auto">
                    <button class="btn btn-secondary" data-toggle="modal" data-bs-toggle="modal" data-bs-target="#modelSelectModal">â‹®</button>
                </div>
            </div>
        </div>
        <div id="chat-messages"></div>
        <div id="chat-input">
            <input type="text" id="message-input" placeholder="Type a message...">
            <button onclick="sendMessage()">Send</button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modelSelectModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Select preferred model</h5>
          </div>
          <div class="modal-body">
            <div id="model-list-container">
              <select id="model-select" class="form-control"></select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
{%- endif %}