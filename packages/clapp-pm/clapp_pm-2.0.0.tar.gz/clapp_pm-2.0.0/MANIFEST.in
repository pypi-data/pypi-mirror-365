# MANIFEST.in - PyPI packaging i√ßin dosya listesi

# Temel dosyalar
include README.md
include LICENSE
include version.json
include requirements.txt
include MANIFEST.in
include pyproject.toml
include setup.py
include *.py
include *.md
include *.txt
include *.json

recursive-include . *.py
recursive-include . *.json
recursive-include . *.md
recursive-include . *.txt

# Exclude development files
exclude .gitignore
exclude .cursorrules
exclude dev.cursorrules
exclude gui.cursorrules
exclude packaging.cursorrules
exclude GITHUB_SETUP.md
exclude __pycache__
recursive-exclude . __pycache__
recursive-exclude . *.pyc
recursive-exclude . *.pyo
recursive-exclude . *.orig
recursive-exclude . *.rej
recursive-exclude . .git*
recursive-exclude . .DS_Store

# Exclude test and development directories
prune tests
prune apps
prune packages-repo-files
prune .git
prune build
prune dist
prune *.egg-info 