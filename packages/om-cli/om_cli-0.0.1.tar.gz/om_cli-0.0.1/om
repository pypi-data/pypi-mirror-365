# Smart suggestions based on time of day with new features
def get_time_based_suggestions():
    hour = datetime.now().hour
    
    if 5 <= hour < 9:  # Morning
        return [
            "üåÖ Good morning! Try: om coach daily (get your AI coaching insight)",
            "‚òï Start your day: om dashboard summary (check your wellness status)",
            "üßò Center yourself: om autopilot tasks (see your wellness tasks)",
            "üìä Track progress: om gamify status (view achievements)"
        ]
    elif 12 <= hour < 14:  # Lunch
        return [
            "üçΩÔ∏è Midday check: om dashboard summary (wellness overview)",
            "üí™ Quick reset: om autopilot recommendations (get AI suggestions)",
            "üßò Lunch meditation: om coach daily (personalized guidance)",
            "üéØ Check progress: om gamify challenge (daily challenge)"
        ]
    elif 17 <= hour < 20:  # Evening
        return [
            "üåÜ Evening wind-down: om dashboard live (watch your progress)",
            "üìù Reflect: om coach analyze (analyze your mood patterns)",
            "üôè Evening gratitude: om gamify achievements (celebrate progress)",
            "ü§ñ Autopilot check: om autopilot status (wellness automation)"
        ]
    elif 20 <= hour < 24:  # Night
        return [
            "üåô Prepare for rest: om dashboard export (save your progress)",
            "üò¥ Sleep support: om coach urgent (check for urgent insights)",
            "üßò Night meditation: om autopilot complete (finish daily tasks)",
            "üéÆ Progress review: om gamify status (see today's achievements)"
        ]
    else:  # Late night/early morning
        return [
            "üåÉ Late night support: om rescue (if you need help)",
            "üò∞ Can't sleep?: om coach daily (get personalized support)",
            "ü´Å Calm your mind: om dashboard summary (check wellness status)",
            "ü§ñ Auto support: om autopilot urgent (priority wellness tasks)"
        ]

