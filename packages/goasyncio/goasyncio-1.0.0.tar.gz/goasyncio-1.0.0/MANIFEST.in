# GoAsyncIO Package Manifest
# This file ensures all necessary files are included in the PyPI distribution

include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include requirements.txt
include requirements-dev.txt

# Include all Python packages
recursive-include goasyncio *.py

# Include examples
recursive-include examples *.py
recursive-include examples *.md

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Include test files (optional for PyPI, but good practice)
recursive-include tests *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .pytest_cache
