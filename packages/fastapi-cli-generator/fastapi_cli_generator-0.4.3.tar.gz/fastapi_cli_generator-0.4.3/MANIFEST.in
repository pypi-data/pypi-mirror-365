# Include important files in the package
include README.md
include LICENSE
include MANIFEST.in
include pyproject.toml

# Include template directories
recursive-include app_name_function *
recursive-include app_name_module *

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info

# Exclude test files
exclude test_*.py
exclude *test*
exclude my-test-project
exclude interactive-test
exclude global-test
exclude final-test-*
