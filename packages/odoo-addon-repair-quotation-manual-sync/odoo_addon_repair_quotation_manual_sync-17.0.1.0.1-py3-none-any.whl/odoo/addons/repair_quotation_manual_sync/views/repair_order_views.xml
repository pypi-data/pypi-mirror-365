<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_repair_order_form_inherit_invoiceable_column" model="ir.ui.view">
        <field name="name">repair.order.form - repair_quotation_manual_sync</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='move_ids']/tree/field[@name='lot_ids']"
                position="after"
            >
                <field name="is_repair_sale_confirmed" column_invisible="True" />
                <field name="repair_invoiceable" readonly="is_repair_sale_confirmed" />
            </xpath>
        </field>
    </record>
</odoo>
