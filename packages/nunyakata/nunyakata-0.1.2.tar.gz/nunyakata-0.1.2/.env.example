# Nunyakata - Ghana Services Integration
# Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# NALO SOLUTIONS CONFIGURATION
# =============================================================================

# Payment API Credentials
# Get these from your Nalo Solutions merchant dashboard
NALO_PAYMENT_USERNAME=your_payment_username
NALO_PAYMENT_PASSWORD=your_payment_password
NALO_MERCHANT_ID=your_merchant_id

# SMS API Credentials - Method 1: Username/Password
NALO_SMS_USERNAME=your_sms_username
NALO_SMS_PASSWORD=your_sms_password
NALO_SMS_SOURCE=YOUR_SENDER_ID

# SMS API Credentials - Method 2: Auth Key (Alternative to username/password)
# Use either username/password OR auth key, not both
NALO_SMS_AUTH_KEY=your_long_auth_key_here

# Email API Credentials - Method 1: Username/Password
NALO_EMAIL_USERNAME=your_email_username
NALO_EMAIL_PASSWORD=your_email_password

# Email API Credentials - Method 2: Auth Key (Alternative to username/password)
# Use either username/password OR auth key, not both
NALO_EMAIL_AUTH_KEY=your_email_auth_key_here

# API Endpoints (Optional - defaults provided)
NALO_PAYMENT_BASE_URL=https://api.nalosolutions.com/payplus/api/
NALO_SMS_BASE_URL=https://sms.nalosolutions.com/smsbackend/clientapi/Resl_Nalo/send-message/
NALO_SMS_POST_URL=https://sms.nalosolutions.com/smsbackend/Resl_Nalo/send-message/
NALO_EMAIL_BASE_URL=https://sms.nalosolutions.com/clientapi/Nal_resl/send-email/

# General API Key (if any)
NALO_API_KEY=your_general_api_key

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Payment Callback URLs
PAYMENT_CALLBACK_URL=https://yoursite.com/webhooks/payment
SMS_DELIVERY_CALLBACK_URL=https://yoursite.com/webhooks/sms-delivery

# Email Callback URLs
EMAIL_DELIVERY_CALLBACK_URL=https://yoursite.com/webhooks/email-delivery

# USSD Callback Configuration
USSD_CALLBACK_URL=https://yoursite.com/webhooks/ussd

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# Application URLs
APP_BASE_URL=https://yourapp.com
APP_NAME=Your App Name

# Database (if using for webhook logging/storage)
DATABASE_URL=postgresql://user:password@localhost:5432/nunyakata_db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for webhook signature verification
WEBHOOK_SECRET=your_webhook_secret_key

# API rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/nunyakata.log

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test phone numbers (use Ghana format: 233XXXXXXXXX)
TEST_PHONE_NUMBER=233501234567
TEST_PHONE_NUMBER_2=233507654321

# Test amounts for payment testing
TEST_PAYMENT_AMOUNT=1.00

# Test credentials (for development/testing)
TEST_NALO_PAYMENT_USERNAME=test_username
TEST_NALO_PAYMENT_PASSWORD=test_password
TEST_NALO_MERCHANT_ID=test_merchant_id

