# Graphiti Server Security Configuration

# =============================================================================
# SECURITY ENFORCEMENT
# =============================================================================

# Enable/disable security features (set to 'false' only for development)
GRAPHITI_SECURITY_ENABLED=true

# API Key for authentication (generate a strong random key)
# Example: openssl rand -hex 32
GRAPHITI_API_KEY=your_secure_api_key_here_generate_with_openssl_rand_hex_32

# JWT Secret for token validation (if using JWT)
GRAPHITI_JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_hex_32

# =============================================================================
# DATA ISOLATION
# =============================================================================

# Require group_id for all operations (recommended: true)
GRAPHITI_REQUIRE_GROUP_ID=true

# Allowed groups (comma-separated list, empty = allow all groups)
# Example: GRAPHITI_ALLOWED_GROUPS=company_a,company_b,project_x
GRAPHITI_ALLOWED_GROUPS=

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per time window
GRAPHITI_RATE_LIMIT_REQUESTS=100

# Time window in seconds (3600 = 1 hour)
GRAPHITI_RATE_LIMIT_WINDOW=3600

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Development (less restrictive)
# GRAPHITI_SECURITY_ENABLED=false
# GRAPHITI_REQUIRE_GROUP_ID=false
# GRAPHITI_RATE_LIMIT_REQUESTS=1000

# Production (highly secure)
# GRAPHITI_SECURITY_ENABLED=true
# GRAPHITI_REQUIRE_GROUP_ID=true
# GRAPHITI_ALLOWED_GROUPS=prod_tenant_1,prod_tenant_2
# GRAPHITI_RATE_LIMIT_REQUESTS=50
# GRAPHITI_RATE_LIMIT_WINDOW=3600

# Multi-tenant SaaS
# GRAPHITI_SECURITY_ENABLED=true
# GRAPHITI_REQUIRE_GROUP_ID=true
# GRAPHITI_ALLOWED_GROUPS=tenant_123,tenant_456,tenant_789
# GRAPHITI_RATE_LIMIT_REQUESTS=200
# GRAPHITI_RATE_LIMIT_WINDOW=3600
