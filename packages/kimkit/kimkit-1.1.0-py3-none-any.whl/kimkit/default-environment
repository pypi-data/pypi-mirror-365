LOCAL_REPOSITORY_PATH=$KIMKIT_DATA_DIRECTORY/repository

KIMKIT_SETTINGS_DIRECTORY=$KIMKIT_DATA_DIRECTORY
KIMKIT_EDITORS_FILE=$KIMKIT_DATA_DIRECTORY/editors.txt
