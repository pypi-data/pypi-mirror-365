KIMKIT_DEBUG=False

MONGODB_DATABASE=KIMkit_metadata
MONGODB_HOSTNAME=127.0.0.1

#=============================================================================
# global defines that are necessary to define interface to tests
#=============================================================================
OUTPUT_DIR=output
