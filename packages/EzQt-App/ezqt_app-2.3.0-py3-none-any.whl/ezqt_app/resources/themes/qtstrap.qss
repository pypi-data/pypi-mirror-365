/* Global settings */
* {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 14px;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
/* Primary Button */
QPushButton.btn-primary {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
}

QPushButton.btn-primary:hover {
    background-color: #0056b3;
}

