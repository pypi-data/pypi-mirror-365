from autocrud import SingleModelCRUD, AutoCRUD, MemoryStorage, DiskStorage

@dataclass
class User:
    name: str
    email: str
    age: int

# å–®æ¨¡å‹ CRUDï¼ˆç›´æ¥æ“ä½œï¼‰
