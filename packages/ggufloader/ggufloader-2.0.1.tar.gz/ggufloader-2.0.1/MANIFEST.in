include README.md
include LICENSE
include pyproject.toml
include MANIFEST.in

# Documentation
recursive-include ggufloader/docs *.md
recursive-include ggufloader/docs *.txt

# Addons
recursive-include ggufloader/addons *.py
recursive-include ggufloader/addons *.json
recursive-include ggufloader/addons *.md

# UI and widgets
recursive-include ggufloader/ui *.py
recursive-include ggufloader/widgets *.py
recursive-include ggufloader/mixins *.py
recursive-include ggufloader/models *.py

# Resources
include ggufloader/icon.ico
recursive-include ggufloader *.ico
recursive-include ggufloader *.png
recursive-include ggufloader *.jpg
recursive-include ggufloader *.json

# Configuration files
include ggufloader/*.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store