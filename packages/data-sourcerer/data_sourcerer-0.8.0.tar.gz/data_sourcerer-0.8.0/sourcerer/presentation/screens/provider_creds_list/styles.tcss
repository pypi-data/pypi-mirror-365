
Container {
  height: auto;
}

Label {
  padding-left: 1;
}

ProviderCredsListScreen {
  align: center middle;
  content-align: center top;

  & > #ProviderCredsListScreen {
    padding: 1 2 0 2;
    margin: 0 0;
    width: 60%;
    height: 60%;
    border: solid $secondary-background;

    #right-top {
      align: right top;

      .add_registration_button {
        color: $success-darken-2;

        &:hover {
            color: $primary;
        }
        &:focus {
            color: $primary;
        }

      }

      margin-bottom: 1;
    }

    ProviderCredentialsRow.active {
      background: $primary-lighten-2;
      color: $background-darken-3;
    }

    ProviderCredentialsRow, Horizontal {
      height: auto;
    }

    .credentials_active {
      width: 10%;
      background: transparent;
      border: none;
    }

    .credentials_name {
      width: 20%;
    }

    .credentials_provider {
      width: 25%;
    }

    .credentials_auth_method {
      width: 30%;
    }

    .credentials_auth_delete {
      width: 10%;
    }

    & > Select {
      margin-bottom: 1;
    }
  }
}
