                # Streaming execution
                status_placeholder = st.empty()
                progress_bar = st.progress(0)
                results_container = st.container()
                
                try:
                    step_count = 0
                    for step in stream_workflow(task):
                        step_count += 1
                        progress_bar.progress(min(step_count / 10, 1.0))
                        
                        # Display step information
                        with results_container:
                            for node_name, node_output in step.items():
                                if node_name != "__end__":
                                    st.write(f"**{node_name.replace('_', ' ').title()}:**")
                                    
                                    # Show messages if available
                                    messages = node_output.get("messages", [])
                                    for msg in messages[-1:]:  # Show last message
                                        st.write(f"ğŸ’¬ {msg.content}")
                                    
                                    st.divider()
                        
                        status_placeholder.info(f"Step {step_count} completed...")
                    
                    status_placeholder.success("âœ… Workflow completed!")
                    
                except Exception as e:
                    st.error(f"Workflow error: {e}")
            
            else:
                # Non-streaming execution
                with st.spinner("Executing workflow..."):
                    try:
                        result = workflow.run(task)
                        
                        st.success("âœ… Workflow completed!")
                        
                        # Display final result
                        if result.get("final_result"):
                            st.subheader("ğŸ“‹ Final Result")
                            st.write(result["final_result"])
                        
                        # Display workflow details
                        with st.expander("ğŸ” Workflow Details"):
                            st.json(result)
                        
                    except Exception as e:
                        st.error(f"Workflow error: {e}")

if __name__ == "__main__":
    main()

