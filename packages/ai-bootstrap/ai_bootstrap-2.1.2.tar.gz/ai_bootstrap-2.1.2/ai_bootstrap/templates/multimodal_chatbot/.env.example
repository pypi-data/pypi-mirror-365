# LLM Provider Configuration
{% if llm_provider == "openai" %}
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4-vision-preview
{% elif llm_provider == "anthropic" %}
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_MODEL=claude-3-opus-20240229
{% elif llm_provider == "ollama" %}
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=llava
{% endif %}

# Chatbot Configuration
MAX_CONVERSATION_TURNS=50
RESPONSE_TEMPERATURE=0.7
MAX_TOKENS=1000

# Memory Settings
MEMORY_TYPE=conversation_buffer
MAX_MEMORY_TOKENS=2000

{% if 'image' in modalities %}
# Image Processing
MAX_IMAGE_SIZE=5242880
{% if 'generation' in image_features %}
DALLE_MODEL=dall-e-3
STABLE_DIFFUSION_MODEL=stable-diffusion-xl-base-1.0
{% endif %}
{% endif %}

{% if 'audio' in modalities %}
# Audio Processing
MAX_AUDIO_SIZE=26214400
{% if 'stt' in audio_features %}
STT_MODEL=whisper-1
{% endif %}
{% if 'tts' in audio_features %}
TTS_MODEL=tts-1
TTS_VOICE=alloy
{% endif %}
{% endif %}

# UI Settings
{% if ui_framework == "chainlit" %}
CHAINLIT_PORT=8000
CHAINLIT_HOST=0.0.0.0
{% elif ui_framework == "streamlit" %}
STREAMLIT_PORT=8501
{% elif ui_framework == "flask" %}
FLASK_PORT=5000
FLASK_HOST=0.0.0.0
FLASK_DEBUG=false
{% endif %}

# Security Settings
MAX_FILE_UPLOADS_PER_SESSION=10
SESSION_TIMEOUT_MINUTES=60
