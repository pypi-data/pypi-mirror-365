# ==============================================================================
# MEMG (Memory Management Package) Configuration
# ==============================================================================
# Copy this file to .env and customize the values for your environment
# All MEMG_* variables control the MEMG memory management system behavior

# ==============================================================================
# Core MEMG Hyperparameters
# ==============================================================================

# Message window size - number of recent messages to consider for context (m parameter)
MEMG_MESSAGE_WINDOW_SIZE=10

# Similar memories count - number of similar memories retrieved for conflict detection (s parameter)
MEMG_SIMILAR_MEMORIES_COUNT=10

# Similarity threshold for conflict detection (0.0-1.0)
MEMG_SIMILARITY_THRESHOLD=0.7

# Score threshold for search results (0.0-1.0)
MEMG_SCORE_THRESHOLD=0.3

# High similarity threshold for duplicate detection (0.0-1.0)
MEMG_HIGH_SIMILARITY_THRESHOLD=0.9

# ==============================================================================
# MEMG Feature Toggles
# ==============================================================================

# Enable conversation summary generation and storage
MEMG_ENABLE_SUMMARIES=true

# Enable temporal reasoning (mark invalid vs delete)
MEMG_ENABLE_TEMPORAL=true

# Enable entity extraction from memories
MEMG_ENABLE_ENTITIES=true

# Enable relationship creation between entities
MEMG_ENABLE_RELATIONSHIPS=true

# ==============================================================================
# MEMG Performance Settings
# ==============================================================================

# Maximum memories extracted per message pair
MEMG_MAX_MEMORIES_PER_EXTRACTION=5

# Batch size for bulk operations
MEMG_BATCH_SIZE=100

# Enable conversation summary caching
MEMG_CACHE_SUMMARIES=true

# ==============================================================================
# MEMG Database Configuration
# ==============================================================================

# Vector embedding dimension (must match your embedding model)
MEMG_VECTOR_DIMENSION=768

# Qdrant collection name for storing memories
MEMG_QDRANT_COLLECTION=memories

# Kuzu database path (relative to project or absolute)
MEMG_KUZU_DB_PATH=kuzu_db

# ==============================================================================
# Memory System Configuration (General)
# ==============================================================================

# Enable debug mode for detailed logging
MEMORY_SYSTEM_DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MEMORY_SYSTEM_LOG_LEVEL=INFO

# Enable performance monitoring
MEMORY_SYSTEM_PERF_MONITORING=false

# MCP server port
MEMORY_SYSTEM_MCP_PORT=8787

# MCP server host
MEMORY_SYSTEM_MCP_HOST=0.0.0.0

# Persist conversation history to disk
MEMORY_SYSTEM_PERSIST_HISTORY=true

# Conversation history storage path
MEMORY_SYSTEM_HISTORY_PATH=conversation_history

# ==============================================================================
# Required Database Connections (from existing system)
# ==============================================================================

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=memories

# Kuzu Graph Database Path
KUZU_DB_PATH=$HOME/.local/share/memory_system/kuzu/memory_db

# Google AI Configuration
GOOGLE_API_KEY=add_your_key_here
GEMINI_MODEL=gemini-2.0-flash

# Embedding Configuration
EMBEDDING_DIMENSION_LEN=768

# ==============================================================================
# Example Production Configuration
# ==============================================================================
# For production deployments, consider these optimized settings:
#
# MEMG_MESSAGE_WINDOW_SIZE=15
# MEMG_SIMILAR_MEMORIES_COUNT=20
# MEMG_SIMILARITY_THRESHOLD=0.8
# MEMG_HIGH_SIMILARITY_THRESHOLD=0.95
# MEMG_MAX_MEMORIES_PER_EXTRACTION=10
# MEMG_BATCH_SIZE=200
# MEMORY_SYSTEM_LOG_LEVEL=WARNING
# MEMORY_SYSTEM_PERF_MONITORING=true
QDRANT_STORAGE_PATH=$HOME/.local/share/memory_system/qdrant
