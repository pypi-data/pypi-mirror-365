<odoo>

<record id="l10n_id_bukti_potong_pph_1721_a1_internal_user_rule" model="ir.rule">
    <field name="name">Bukti Potong PPh 1721 a1 - Internal Users</field>
    <field name="model_id" ref="model_l10n_id_bukti_potong_pph_1721_a1" />
    <field name="groups" eval="[(4, ref('base.group_user'))]" />
    <field name="domain_force">[
      ('user_id','=',user.id),
    ]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

