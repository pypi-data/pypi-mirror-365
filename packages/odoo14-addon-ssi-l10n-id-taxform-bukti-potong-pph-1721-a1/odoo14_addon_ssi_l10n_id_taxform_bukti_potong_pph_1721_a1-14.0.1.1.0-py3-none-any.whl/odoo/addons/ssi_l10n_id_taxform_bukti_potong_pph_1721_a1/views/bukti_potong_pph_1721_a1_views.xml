<odoo>

<record id="bukti_potong_pph_1721_a1_view_tree" model="ir.ui.view">
    <field name="name">l10n_id.bukti_potong_pph_1721_a1 - Tree</field>
    <field name="model">l10n_id.bukti_potong_pph_1721_a1</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="date" />
                <field name="start_tax_period_id" />
                <field name="end_tax_period_id" />
                <field name="wajib_pajak_id" />
                <field name="pemotong_pajak_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="bukti_potong_pph_1721_a1_view_form" model="ir.ui.view">
    <field name="name">l10n_id.bukti_potong_pph_1721_a1 - Form</field>
    <field name="model">l10n_id.bukti_potong_pph_1721_a1</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="company_id" />
                <field name="wajib_pajak_id" />
                <field name="wajib_pajak_npwp" />
                <field name="wajib_pajak_nik" />
                <field name="wajib_pajak_ptkp_category_id" />
                <field name="kode_objek_pajak_id" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="pemotong_pajak_id" domain="[('is_company','=',True)]" />
                <field name="date" />
                <field name="start_tax_period_id" />
                <field name="end_tax_period_id" />
                <field
                        name="ttd_id"
                        domain="[('is_company','=',False),('parent_id','=',company_partner_id)]"
                    />
            </xpath>
            <xpath expr="//page[@name='note']" position="before">
                <page name="informasi_umum" string="Informasi Umum">
                    <group name="informasi_umum_1" colspan="4" col="2">
                        <field name="wajib_pajak_alamat" />
                        <field name="wajib_pajak_alamat2" />
                        <field name="wajib_pajak_kota" />
                        <field name="wajib_pajak_state_id" />
                        <field name="wajib_pajak_country_id" />
                        <field name="wajib_pajak_zip" />
                    </group>
                    <group name="informasi_umum_1" colspan="4" col="2">
                        <field name="wajib_pajak_jenis_kelamin" />
                        <field name="wajib_pajak_job_position" />
                        <field name="wajib_pajak_karyawan_asing" />
                        <field name="wajib_pajak_kode_negara" />
                    </group>
                </page>
                    <page string="Penghasilan Bruto" name="penghasilan_bruto">
                        <group name="penghasilan_bruto_1" colspan="4" col="2">
                            <field name="penghasilan_01" />
                            <field name="penghasilan_02" />
                            <field name="penghasilan_03" />
                            <field name="penghasilan_04" />
                            <field name="penghasilan_05" />
                            <field
                                name="penghasilan_06"
                                string="PENERIMAAN DALAM BENTUK NATURA YANG DIKENAKAN PPh PASAL 21"
                            />
                            <field name="penghasilan_07" />
                            <field name="penghasilan_08" />
                        </group>
                    </page>
                    <page string="Pengurangan" name="pengurang">
                        <group name="pengurang_1" colspan="4" col="2">
                            <field name="pengurang_09" />
                            <field name="pengurang_10" />
                            <field name="pengurang_11" />
                        </group>
                    </page>
                    <page string="Penghitungan PPh Pasal 21" name="penghitungan">
                        <group name="penghitungan_1" colspan="4" col="2">
                            <field name="perhitungan_12" />
                            <field name="perhitungan_13" />
                            <field name="perhitungan_14" />
                            <field name="perhitungan_15" />
                            <field name="perhitungan_16" />
                            <field name="perhitungan_17" />
                            <field name="perhitungan_18" />
                            <field name="perhitungan_19" />
                            <field name="perhitungan_20" />
                        </group>
                    </page>
            </xpath>
        </data>
    </field>
</record>

<record id="bukti_potong_pph_1721_a1_view_search" model="ir.ui.view">
    <field name="name">l10n_id.bukti_potong_pph_1721_a1 - Search</field>
    <field name="model">l10n_id.bukti_potong_pph_1721_a1</field>
    <field name="mode">primary</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="start_tax_period_id" />
                <field name="end_tax_period_id" />
                <field name="wajib_pajak_id" />
                <field name="pemotong_pajak_id" />
                <field name="ttd_id" />
            </xpath>
            <xpath expr="//group[@name='group_by']" position="inside">
                <filter name="grp_date" string="Date" context="{'group_by':'date'}" />
                <filter
                        name="filter_grp_start_tax_period_id"
                        string="Start Tax Period"
                        context="{'group_by':'start_tax_period_id'}"
                    />
                <filter
                        name="filter_grp_end_tax_period_id"
                        string="End Tax Period"
                        context="{'group_by':'end_tax_period_id'}"
                    />
                <filter
                        name="filter_grp_wp"
                        string="Wajib Pajak"
                        context="{'group_by':'wajib_pajak_id'}"
                    />
                <filter
                        name="filter_grp_pp"
                        string="Pemotong Pajak"
                        context="{'group_by':'pemotong_pajak_id'}"
                    />
                <filter
                        name="filter_grp_ttd"
                        string="TTD"
                        context="{'group_by':'ttd_id'}"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="bukti_potong_pph_1721_a1_action" model="ir.actions.act_window">
    <field name="name">Tax Form 1721 A1</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">l10n_id.bukti_potong_pph_1721_a1</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="bukti_potong_pph_1721_a1_view_search" />
    <field name="context">{'default_filter_draft':1, 'default_filter_confirm':1}</field>
</record>

<menuitem
        id="bukti_potong_pph_1721_a1_menu"
        name="Tax Form 1721 A1"
        parent="ssi_l10n_id_taxform.taxform_bukti_potong_menu"
        groups="l10n_id_bukti_potong_pph_1721_a1_viewer_group"
        action="bukti_potong_pph_1721_a1_action"
        sequence="100"
    />

</odoo>
