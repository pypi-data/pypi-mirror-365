@echo off
REM Script to build and serve multilingual documentation
REM Usage: build-multilingual.bat

echo Building multilingual MkDocs site...

REM Build both languages with single command using mkdocs-static-i18n
echo Building English and French versions with mkdocs-static-i18n...
mkdocs build --clean --site-dir site/

echo ✅ Multilingual site built successfully!
echo.
echo Structure (generated by mkdocs-static-i18n):
echo   site/
echo   ├── index.html (English - default language)
echo   ├── with-license/
echo   ├── no-license/
echo   └── fr/
echo       ├── index.html (French)
echo       ├── with-license/
echo       └── no-license/
echo To serve locally:
echo   cd site
echo   python -m http.server 8000
echo.
set /p serve="Do you want to start the local server now? (y/N): "
if /i "%serve%"=="y" (
    cd site
    echo Starting local server at http://127.0.0.1:8000...
    python -m http.server 8000
)
