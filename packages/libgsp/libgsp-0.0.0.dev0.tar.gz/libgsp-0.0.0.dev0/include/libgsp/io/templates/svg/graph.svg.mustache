<svg xmlns="http://www.w3.org/2000/svg" width="{{width}}" height="{{height}}">
  <metadata>{{{metadata}}}</metadata>
  <title>{{title}}</title>
  <style>
    .node { fill: #00BCE3; stroke: black; stroke-width: 0.7; opacity: 0.8}
    .node-label { font-size: 12 }
    .signal { stroke: red; fill: red; stroke-width: 2;}
    circle.signal { r: 1; }
    .signal-text { fill: red; }
  </style>

  {{#edges}}
  <line class="edge" x1="{{x1}}" y1="{{y1}}" x2="{{x2}}" y2="{{y2}}" stroke="black" stroke-width="1.5"/>
  {{/edges}}

  {{#nodes}}
  <circle class="node" cx="{{x}}" cy="{{y}}" r="8" />
  <text class="node-label" text-anchor="middle" dominant-baseline="middle" x="{{x}}" y="{{y}}">{{label}}</text>
  {{#has_signal}}
    <line class="signal" x1="{{x}}" y1="{{y}}" x2="{{x2}}" y2="{{y2}}"/>
    <circle class="signal" cx="{{x2}}" cy="{{y2}}" r="1"/>
    <text class="signal-text" text-anchor="middle" dominant-baseline="middle" font-size="6px" x="{{x2}}" y="{{text_y}}">{{signal}}</text>
  {{/has_signal}}
  {{/nodes}}

</svg>
