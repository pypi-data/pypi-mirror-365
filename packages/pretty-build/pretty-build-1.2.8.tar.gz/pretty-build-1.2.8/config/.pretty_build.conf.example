# Pretty Build Configuration File
# This file is automatically generated and managed by pretty_build.py

[build]
# Number of parallel build jobs (default: CPU count)
parallel_jobs = 4

# Build type for CMake projects
build_type = Debug

# Compiler optimization level
optimization_level = O2

# Enable verbose build output
verbose_mode = false

# Treat warnings as errors
warnings_as_errors = false

# Enable sanitizers (address, memory, etc.)
enable_sanitizers = false

[cache]
# Enable intelligent build caching
enable_cache = true

# Cache directory path (relative to project root)
cache_dir = .build_cache

# Maximum cache size in MB (0 = unlimited)
max_cache_size_mb = 1024

# Cache cleanup threshold (percentage)
cleanup_threshold = 85

[notifications]
# Enable system notifications
enable_notifications = true

# Play notification sounds
notification_sound = true

# Notification timeout in seconds
notification_timeout = 5

[performance]
# Enable real-time performance monitoring
enable_performance_monitoring = true

# Performance monitoring interval in seconds
monitoring_interval = 1.0

# Enable memory usage tracking
track_memory_usage = true

# Performance alert thresholds
cpu_alert_threshold = 90
memory_alert_threshold = 85

[logging]
# Log level (DEBUG, INFO, WARNING, ERROR)
log_level = INFO

# Auto-save build logs
auto_save_logs = true

# Log file retention days
log_retention_days = 7

[plugins]
# List of enabled plugins
enabled_plugins = logging

# Plugin configuration directory
plugin_config_dir = .pretty_build_plugins

[advanced]
# Enable incremental builds
enable_incremental_builds = true

# Use ccache if available
use_ccache = true

# Use distcc for distributed compilation
use_distcc = false

# Enable unity builds
enable_unity_builds = false

# Enable link-time optimization
enable_lto = false

# Build retry attempts on failure
retry_attempts = 0

# Retry delay in seconds
retry_delay = 5