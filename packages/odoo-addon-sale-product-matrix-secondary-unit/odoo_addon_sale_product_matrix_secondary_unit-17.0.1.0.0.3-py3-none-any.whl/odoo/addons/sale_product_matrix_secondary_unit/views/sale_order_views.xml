<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_order_secondary_unit.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/form//field[@name='secondary_uom_id']"
                position="after"
            >
                <field name="force_product_configurator" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree//field[@name='secondary_uom_id']"
                position="before"
            >
                <field name="force_product_configurator" column_invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/kanban//field[@name='secondary_uom_id']"
                position="after"
            >
                <field name="force_product_configurator" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
