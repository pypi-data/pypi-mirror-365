include README.md
include LICENSE
include requirements.txt
include MANIFEST.in
include pyproject.toml

# تضمين الكود المصدري
recursive-include phydcm *.py

# استبعاد النماذج الكبيرة - سيتم تحميلها تلقائياً
exclude phydcm/outputs/*.keras
include phydcm/outputs/*.json

# استبعاد الملفات غير المرغوبة
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so